@model E_Veterinar.Models.Zaloga

@{
    ViewData["Title"] = "Create";
}

<h4>Dodaj v zalogo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Izdelek</label>
                <select asp-for="IdIzdelek" class="form-control" asp-items="ViewBag.IdIzdelek"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Veterinar</label>
                <select asp-for="IdVeterinar" class="form-control" asp-items="ViewBag.IdVeterinar"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Koliƒçina</label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Nazaj na zalogo</a>
            </div>
        </form>
    </div>
</div>

