@model E_Veterinar.Models.Izdelek

@{
    ViewData["Title"] = "Create";
}

<h4>Izdelek</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Å ifra
                <input asp-for="IdIzdelek" class="form-control" />
                <span asp-validation-for="IdIzdelek" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 0px">
                Naziv
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                Cena za kos
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                Podrobnosti
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 20px">
                <input type="submit" value="Ustvari" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Nazaj</a>
            </div>
        </form>
    </div>
</div>

